            </div>
            <div class="form-group">
                <label asp-for="SportTeam.Title" class="control-label"></label>
                <input asp-for="SportTeam.Title" class="form-control" />
                <span asp-validation-for="SportTeam.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SportTeam.CreatedDate" class="control-label"></label>
                <input asp-for="SportTeam.CreatedDate" class="form-control" />
                <span asp-validation-for="SportTeam.CreatedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SportTeam.Description" class="control-label"></label>
