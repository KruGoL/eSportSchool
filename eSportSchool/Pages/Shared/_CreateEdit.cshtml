@model Microsoft.AspNetCore.Mvc.RazorPages.PageModel

@{
    if (ViewData["Title"] == "Create") { ViewData["value"] = "Create";}
    if (ViewData["Title"] == "Edit") { ViewData["value"] = "Save";}
    ViewData["SubTitle"] = Model?.GetType()?.Name?.Replace("Page",string.Empty )?? "Unspecified";
    Layout = "_Layout";
}

<h1>@ViewData["Title"]</h1>

<h4>@ViewData["SubTitle"]</h4>
<hr />

<form method="post" asp-page-handler = "@ViewData["Title"]">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    @RenderBody()

    <div class="form-group">
        <input type="submit" value=@ViewData["value"] class="btn btn-primary" />
        <a asp-page="Index" asp-page-handler="Index">Back to List</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}