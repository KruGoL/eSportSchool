@page
@model eSportSchool.Pages.AddressesPage

@{  ViewData["Title"] = "Index"; }

<h1>Index</h1>

<p> <a asp-page="Create" asp-page-handler="Create">Create New</a> </p>
<table class="table">
    <thead>
    <tr>
        <th> @Html.DisplayNameFor(model => model.Items[0].Street) </th>
        <th> @Html.DisplayNameFor(model => model.Items[0].City) </th>
        <th> @Html.DisplayNameFor(model => model.Items[0].Region) </th>
        <th> @Html.DisplayNameFor(model => model.Items[0].ZipCode) </th>
        <th> @Html.DisplayNameFor(model => model.Items[0].Country) </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Items) {
        <tr>
            <td> @Html.DisplayFor(modelItem => item.Street) </td>
            <td> @Html.DisplayFor(modelItem => item.City) </td>
            <td> @Html.DisplayFor(modelItem => item.Region) </td>
            <td> @Html.DisplayFor(modelItem => item.ZipCode) </td>
            <td> @Html.DisplayFor(modelItem => item.Country) </td>
            <td>
                <a asp-page="./Edit" asp-page-handler="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-page-handler="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-page-handler="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>