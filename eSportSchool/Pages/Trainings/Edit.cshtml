@page
@model eSportSchool.Pages.Trainings.TrainingsPage
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>TrainingData</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Training.Id" />
            <div class="form-group">
                <label asp-for="Training.SportTeamId" class="control-label"></label>
                <input asp-for="Training.SportTeamId" class="form-control" />
                <span asp-validation-for="Training.SportTeamId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Training.Title" class="control-label"></label>
                <input asp-for="Training.Title" class="form-control" />
                <span asp-validation-for="Training.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Training.CreatedDate" class="control-label"></label>
                <input asp-for="Training.CreatedDate" class="form-control" />
                <span asp-validation-for="Training.CreatedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ExercisesList[0].ExerciseTitle)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ExercisesList[0].Description)
                    </th>
                </tr>
            @foreach (var item in Model.ExercisesList) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ExerciseTitle)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index" asp-page-handler="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
